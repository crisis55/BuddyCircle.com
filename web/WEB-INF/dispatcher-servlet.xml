<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

    <mvc:annotation-driven/>
    <context:component-scan base-package="net.traineeproject.therap"/>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/view/jspfiles"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="10000000" />
    </bean>

    <bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
        <property name="sessionFactory" ref="mySessionFactory"/>
    </bean>
    <!--Dao-->
    <bean id="userDao" class="net.traineeproject.therap.dao.UserDaoImpl">
        <property name="hibernateTemplate" ref="hibernateTemplate"/>
    </bean>

    <bean id="postDao" class="net.traineeproject.therap.dao.PostDaoImpl">
        <property name="hibernateTemplate" ref="hibernateTemplate"/>
    </bean>
    <bean id="friendDao" class="net.traineeproject.therap.dao.FriendDaoImpl">
        <property name="hibernateTemplate" ref="hibernateTemplate"/>
    </bean>
    <bean id="commentDao" class="net.traineeproject.therap.dao.CommentDaoImpl">
        <property name="hibernateTemplate" ref="hibernateTemplate"/>
    </bean>

    <!--Validator-->
    <bean id="registrationValidator" class="net.traineeproject.therap.validator.RegistrationValidator">
    </bean>
    <bean id="logInValidator" class="net.traineeproject.therap.validator.LogInValidator"/>
    <bean id="postValidator" class="net.traineeproject.therap.validator.PostValidator"/>
    <bean id="CommentValidator" class="net.traineeproject.therap.validator.CommentValidator"/>

    <!--Service-->

    <bean id="userService" class="net.traineeproject.therap.services.UserServiceImpl">
        <property name="userDao" ref="userDao"/>
    </bean>
    <bean id="postService" class="net.traineeproject.therap.services.PostServiceImpl">
        <property name="postDao" ref="postDao"/>
    </bean>
    <bean id="friendService" class="net.traineeproject.therap.services.FriendServiceImpl">
        <property name="friendDao" ref="friendDao"/>
    </bean>
    <bean id="commentService" class="net.traineeproject.therap.services.CommentServiceImpl">
        <property name="commentDao" ref="commentDao"/>
    </bean>



</beans>
